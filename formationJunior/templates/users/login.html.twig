{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('users_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Nom d'utilisateur ..." required name="_username" type="text" class="form-control"><br>
            <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn-success">Connexion</button>
        </div>
    </form>


{% endblock %}
